  container: {
    flex: 1,
    backgroundColor: '#fff',
    alignItems: 'center',
    paddingHorizontal: 24,
  },
  header: {
    alignItems: 'center',
    marginTop: 50,
  },
  title: {
    fontSize: 36,
    fontWeight: 'bold',
    color: '#9CB69C',
  },
  description: {
    fontSize: 16,
    color: '#9CB69C',
    textAlign: 'center',
    marginTop: 20,
  },
  image: {
    marginTop: 40,
    width: 150,
    height: 150,
    resizeMode: 'contain',
  },
  startButton: {
    backgroundColor: '#9CB69C',
    paddingVertical: 14,
    paddingHorizontal: 24,
